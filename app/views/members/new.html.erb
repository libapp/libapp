<!DOCTYPE html>
<html>
  <head>
    <title>Room App</title>
  </head>
  <body class="login-bg">
  	<div class="header">
	     <div class="container">
	        <div class="row">
	           <div class="col-md-12">
	              <!-- Logo -->
	              <div class="logo">
	                 <h1><a href="/members">Room App</a></h1>
	              </div>
	           </div>
	        </div>
	     </div>
	</div>

	<div class="page-content container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="login-wrapper">
			        <div class="box">
			            <div class="content-wrap">

                    <h6>Sign Up</h6>
                    <% if @member.errors.any? %>
                        <ul>
                          <% @member.errors.full_messages.each do |msg| %>
                              <li><h1><%= msg %></h1></li>
                          <% end %>
                        </ul>
                    <% end %>
                    <%= bootstrap_form_for(@member) do |f| %>
                        <%= f.text_field :name %>
                        <%= f.email_field :email %>
                        <%= f.password_field :password %>
                        <%= f.submit "Create" %>
                    <% end %>

			            </div>
			        </div>

			        <div class="already">
			            <p>Have an account already?</p>
			            <%= link_to 'Login as member', members_login_path %>
			        </div>
			    </div>
			</div>
		</div>
	</div>
  </body>
</html>