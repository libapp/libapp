<!DOCTYPE html>
<html>
  <head>
    <title>Room App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
  	<div class="header">
	     <div class="container">
	        <div class="row">
	           <div class="col-md-5">
	              <!-- Logo -->
	              <div class="logo">
	                 <h1><a href="/">Room App</a></h1>
	              </div>
	           </div>
	           <div class="col-md-5">
	              <div class="row">
	                <div class="col-lg-12">
	                  <div class="input-group form">
	                       <input type="text" class="form-control" placeholder="Search...">
	                       <span class="input-group-btn">
	                         <button class="btn btn-primary" type="button">Search</button>
	                       </span>
	                  </div>
	                </div>
	              </div>
	           </div>
	        </div>
	     </div>
	</div>

    <div class="page-content">
    	<div class="row">
		  <div class="col-md-2">
		  	<div class="sidebar content-box" style="display: block;">
                <ul class="nav">
                    <!-- Main menu -->
                    <li><a href="<%= edit_member_path(current_member) %>"><i class="glyphicon glyphicon-calendar"></i>Profile</a></li>
                    <li><a href="/schedules"><i class="glyphicon glyphicon-list"></i>Rooms</a></li>
                    <li><a href="/members/logout"><i class="glyphicon glyphicon-pencil"></i>Logout</a></li>
                </ul>
             </div>
		  </div>
		  <div class="col-md-10">
	  			<div class="row">
	  				<div class="col-md-10">
	  					<div class="content-box-large">
			  				<div class="panel-body">

                  <% if @member.errors.any? %>
                    <ul>
                      <% @member.errors.full_messages.each do |msg| %>
                          <li><h1><%= msg %></h1></li>
                      <% end %>
                    </ul>
                  <% end %>
                  <%= bootstrap_form_for(@member) do |f| %>
                      <%= f.text_field :name %>
                      <%= f.email_field :email %>
                      <%= f.password_field :password %>
                      <%= f.submit "Update profile" %>
                  <% end %>

			  				</div>
			  			</div>
	  				</div>
	  			</div>
		  </div>
		</div>
    </div>

    <footer class="navbar-fixed-bottom">
      <div class="container">
        <div class="copy text-center">
          Library Reservation System
        </div>
      </div>
    </footer>

  </body>
</html>