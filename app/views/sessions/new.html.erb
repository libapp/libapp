<!DOCTYPE html>
<html>
  <head>
    <title>Room App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

  </head>
  <body class="login-bg">
  	<div class="header">
	     <div class="container">
	        <div class="row">
	           <div class="col-md-12">
	              <!-- Logo -->
	              <div class="logo">
	                 <h1><a href="/">Room App</a></h1>
	              </div>
	           </div>
	        </div>
	     </div>
	</div>

	<div class="page-content container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="login-wrapper">
			        <div class="box">
			            <div class="content-wrap">
			                <h6>Login as admin</h6>			                	
			                <%= form_tag do %>
			                	<%= text_field_tag :email, nil, placeholder: 'E-mail address' %>
      							    <%= password_field_tag :password, nil, placeholder: 'Password' %>
			                	<div class="action">
			                		<%= submit_tag "Login", class: "btn btn-primary signup" %>
			                	</div>
							<% end %>	                  
			            </div>
			        </div>

			        <div class="already">
			        	<p>Don't have an account yet?</p>
			        	<%= link_to 'Login as member', members_login_path %>
					

			            <!-- <p>Don't have an account yet?</p>
			            <a href="/login/signup">Sign Up</a> -->
			        </div>
			    </div>
			</div>
		</div>
	</div>

  </body>
</html>