<!DOCTYPE html>
<html>
  <head>
    <title>Room App</title>
  </head>

  <body class="login-bg">
  	<div class="header">
	     <div class="container">
	        <div class="row">
	           <div class="col-md-12">
	              <!-- Logo -->
	              <div class="logo">
	                 <h1><a href="/admins">Room App</a></h1>
	              </div>
	           </div>
	        </div>
	     </div>
	  </div>

    <div class="page-content">
      <div class="row">
        <%= render 'menu' %>
        <div class="col-md-10">
          <div class="page-content container">
            <div class="row">
              <div class="col-md-4 col-md-offset-4">
                <div class="login-wrapper">
                  <div class="box">
                    <div class="content-wrap">
                      <h6>Create a new Admin</h6>
                      <% if @admin.errors.any? %>
                          <ul>
                            <% @admin.errors.full_messages.each do |msg| %>
                                <li><h1><%= msg %></h1></li>
                            <% end %>
                          </ul>
                      <% end %>
                      <%= bootstrap_form_for(@admin) do |f| %>
                          <%= f.text_field :name %>
                          <%= f.email_field :email %>
                          <%= f.password_field :password %>
                          <%= f.submit "Create" %>
                      <% end %>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render 'footer' %>
  </body>
</html>