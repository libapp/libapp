<!DOCTYPE html>
<html>
  <head>
    <title>Room App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
  	<%= render 'navbar' %>

    <div class="page-content">
    	<div class="row">
    	 <%= render 'menu' %>
		  <div class="col-md-10">

  			<div class="content-box-large">
  				<div class="panel-heading">
					<div class="panel-title">Members</div>
          <div class="panel-options">
            <a class="btn btn-primary btn-sm" href="/admins/member/new" role="button">Create Member</a>
          </div>
				</div>
  				<div class="panel-body">
  					<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
						<thead>
							<tr>
								<th>Email</th>
    							<th>Name</th>
    							<th>Status</th>
   								<th colspan="3"></th>
							</tr>
						</thead>
						<tbody>
							<% @members.each do |member| %>
						      <tr>
						        <td><%= member.email %></td>
						        <td><%= member.name %></td>
						        <td><% if member.status == 0 %> Default <% else %> Deleted <% end %></td>
						        <td><%= link_to 'Show', "/admins/member/profile?member_id=#{member.id}" %></td>
                    <td><%= link_to 'History', "/admins/member/history?member_id=#{member.id}" %></td>
						        <td><%= link_to 'Delete', member_path(member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <td><%= link_to 'Reserve', "/schedules?member_id=#{member.id}"%></td>
						      </tr>
							<% end %>
						</tbody>
					</table>
  				</div>
  			</div>
		  </div>
		</div>
    </div>
	<%= render 'footer' %>
  </body>
</html>