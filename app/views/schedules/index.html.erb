<!DOCTYPE html>
<html>
<head>
  <title>Room App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <!-- Logo -->
        <div class="logo">
          <h1><a href="/">Room App</a></h1>
        </div>
      </div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-lg-12">
            <div class="input-group form">
              <input type="text" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
               <button class="btn btn-primary" type="button">Search</button>
             </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="page-content">
  <div class="row">
    <div class="col-md-2">
      <div class="sidebar content-box" style="display: block;">
        <ul class="nav">
          <!-- Main menu -->
          <li><a href="<%= edit_member_path(current_member) %>"><i class="glyphicon glyphicon-cog"></i> Profile </a></li>
          <li><a href="/schedules"><i class="glyphicon glyphicon-calendar"></i> Reservation </a></li>
          <li><a href="<%=schedules_history_path%>"><i class="glyphicon glyphicon-list"></i> History </a></li>
          <li><a href="/members/logout"><i class="glyphicon glyphicon-hand-right"></i> Logout </a></li>
        </ul>
      </div>
    </div>
    <div class="col-md-10">

      <!-- Page Features -->
      <div class="row text-center">

        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Room number</th>
              <th>8:00-9:00</th>
              <th>9:00-10:00</th>
              <th>10:00-11:00</th>
              <th>11:00-12:00</th>
              <th>12:00-13:00</th>
              <th>13:00-14:00</th>
              <th>14:00-15:00</th>
              <th>15:00-16:00</th>
              <th>16:00-17:00</th>
              <th>17:00-18:00</th>
              <th>18:00-19:00</th>
              <th>19:00-20:00</th>
              <th>20:00-21:00</th>
              <th>21:00-22:00</th>
            </tr>
          </thead>
          <tbody>
            <% @table_schedules.each do |room_number, schedules| %>
              <tr>
                <th scope="row"><%= room_number %></th>

                <% 14.times do |i| %>
                    <% if schedules[i] != 1 %>
                      <td><a href="schedules/new?member_id=<%= current_member.id %>&room_number=<%= room_number %>&start_at=<%= i+8 %>:00&end_at=<%= i+10 %>:00">Book</a></td>
                    <% else %>
                      <td>X</td>
                    <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

      <!-- /.row -->

      <hr>

    </div>
  </div>
</div>

<footer class="navbar-fixed-bottom">
  <div class="container">
    <div class="copy text-center">
      Library Reservation System
    </div>
  </div>
</footer>

</body>
</html>