<!DOCTYPE html>
<html>
<head>
  <title>Room App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <!-- Logo -->
        <div class="logo">
          <h1><a href="/">Room App</a></h1>
        </div>
      </div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-lg-12">
            <div class="input-group form">
              <input type="text" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
	                         <button class="btn btn-primary" type="button">Search</button>
	                       </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="page-content">
  <div class="row">
    <div class="col-md-2">
      <div class="sidebar content-box" style="display: block;">
        <ul class="nav">
          <!-- Main menu -->
          <li><a href="<%= edit_member_path(current_member) %>"><i class="glyphicon glyphicon-cog"></i> Profile </a></li>
          <li><a href="/schedules"><i class="glyphicon glyphicon-calendar"></i> Reservation </a></li>
          <li><a href="<%=schedules_history_path%>"><i class="glyphicon glyphicon-list"></i> History </a></li>
          <li><a href="/members/logout"><i class="glyphicon glyphicon-hand-right"></i> Logout </a></li>
        </ul>
      </div>
    </div>

    <div class="col-md-10">
      <div class="page-content container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="login-wrapper">
              <div class="box">
                <div class="content-wrap">

                  <h6>Room Information</h6>
                  <% if @room.errors.any? %>
                      <ul>
                        <% @room.errors.full_messages.each do |msg| %>
                            <li><h1><%= msg %></h1></li>
                        <% end %>
                      </ul>
                  <% end %>
                  <%= bootstrap_form_for(@room) do |f| %>
                      <%= f.text_field :number, :readonly => true %>
                      <%= f.text_field :building, :readonly => true %>
                      <%= f.text_area :size, :readonly => true %>
                      <%= f.text_area :status, :readonly => true %>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="navbar-fixed-bottom">
  <div class="container">
    <div class="copy text-center">
      Library Reservation System
    </div>
  </div>
</footer>

</body>
</html>